<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/icons_view"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:layout_above="@+id/center_text"
        android:src="@drawable/img1"
        android:layout_centerInParent="true"
        android:layout_marginBottom="22dp"/>

    <TextView
        android:id="@+id/center_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingBottom="10dp"
        android:text="You forgot the Bag \n         in a Taxi?"
        android:textColor="@android:color/white"
        android:textSize="22dp"
        android:textStyle="bold" />

    <View
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/myColor"
        android:layout_below="@+id/center_text"
        android:layout_alignLeft="@+id/center_text"
        android:layout_alignRight="@+id/center_text"
        android:layout_marginLeft="-18dp"
        android:layout_marginRight="-18dp"/>

    <TextView
        android:id="@+id/my_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:textColor="@android:color/white"
        android:text="Login and Post your item"
        android:layout_marginLeft="20dp"
        android:layout_alignLeft="@+id/center_text"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"/>

    <View
        android:id="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/myColor"
        android:layout_below="@+id/my_text"
        android:layout_alignLeft="@+id/center_text"
        android:layout_alignRight="@+id/center_text"
        android:layout_marginLeft="-18dp"
        android:layout_marginRight="-18dp"/>



</RelativeLayout>